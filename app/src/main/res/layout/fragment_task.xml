<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.TaskFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/margin_normal"
        android:background="@color/white">

        <EditText
            android:id="@+id/editText_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sniglet"
            android:hint=" Enter new task"
            android:background="@drawable/txt_edit"
            android:lines="3"
            android:maxLines="8"
            android:paddingStart="@dimen/margin4x"
            android:textColor="@color/black"
            android:textSize="@dimen/txt3x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <Button
            android:id="@+id/date_pickerButton"
            style="?android:spinnerStyle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.3"
            android:background="@drawable/btn_shape"
            android:drawableLeft="@drawable/ic_date_range"
            android:hint=" Today"
            android:textAlignment="center"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_task" />


        <Button
            android:id="@+id/time_pickerButton"
            style="?android:spinnerStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle"
            android:drawableStart="@drawable/ic_baseline_more_time_24"
            android:paddingStart="12dp"
            android:layout_marginStart="@dimen/margin2x"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/date_pickerButton"
            app:layout_constraintStart_toEndOf="@+id/date_pickerButton"
            app:layout_constraintTop_toTopOf="@+id/date_pickerButton" />

        <ImageView
            android:id="@+id/note_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            app:layout_constraintBottom_toTopOf="@+id/addTask"
            app:layout_constraintEnd_toEndOf="@+id/date_pickerButton"
            app:layout_constraintStart_toStartOf="@+id/date_pickerButton"
            app:layout_constraintTop_toBottomOf="@+id/date_pickerButton" />

        <ImageView
            android:id="@+id/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_baseline_star_outline_24"
            app:layout_constraintBottom_toTopOf="@+id/addTask"
            app:layout_constraintStart_toEndOf="@+id/note_icon"
            app:layout_constraintTop_toBottomOf="@+id/date_pickerButton" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"

            android:src="@drawable/ic_outline_photo_library_24"
            app:layout_constraintBottom_toTopOf="@+id/addTask"
            app:layout_constraintStart_toEndOf="@+id/dark"
            app:layout_constraintTop_toBottomOf="@+id/date_pickerButton" />

        <EditText
            android:id="@+id/editText_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txt_edit"
            android:fontFamily="@font/sniglet"
            android:hint=" Note"
            android:maxLines="5"
            android:padding="@dimen/margin2x"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note_icon" />

        <Button
            android:id="@+id/addTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_shape"
            android:fontFamily="@font/sniglet"
            android:paddingHorizontal="49dp"
            android:paddingVertical="@dimen/margin2x"
            android:layout_margin="@dimen/margin4x"
            android:text="Add Task"
            android:elevation="@dimen/margin2x"

            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>